---
const pathname = Astro.url.pathname;
---

<header class="bg-white border-b px-2 shadow-sm">
  <nav class="mx-auto max-w-7xl px-4 lg:px-6" aria-label="Top">
    <div class="flex w-full items-center justify-between py-6">
      <div class="flex items-center">
        <span class="sr-only">Finger Interests</span>
        <a href="/">
          <img
            class="h-10 w-auto sm:h-14 mr-3"
            src="https://y7beuqt948.ufs.sh/f/UAv6rg1cIhWPtBWRmjdJcH8QTCgSsJFl0rMZEmiUNtjf2XuA"
            alt=""
          />
        </a>

        <h1
          class="text-2xl font-bold tracking-tight text-black sm:text-4xl font-header"
        >
          Finger Interests
        </h1>
      </div>
      <!-- Hidden on mobile -->
      <div class="hidden md:flex items-center justify-end md:flex-1 lg:w-0">
        <a 
          class={`mr-4 ${pathname === "/" ? "text-black font-semibold" : "text-gray-500 hover:text-gray-900"}`} 
          href="/"
        > 
          About Us
        </a>
        <a 
          class={pathname === "/governance" ? "text-black font-semibold" : "text-gray-500 hover:text-gray-900"} 
          href="/governance"
        >
          Governance
        </a>
      </div>
    </div>
    <div class="flex flex-wrap gap-x-6 py-2 sm:hidden border-b">
      <a 
        href="/" 
        class={pathname === "/" ? "text-black font-semibold" : "text-gray-500 hover:text-gray-900"}
      >
        About Us
      </a>
      <a 
        href="/governance" 
        class={pathname === "/governance" ? "text-black font-semibold" : "text-gray-500 hover:text-gray-900"}
      >
        Governance
      </a>
    </div>
  </nav>
</header>
